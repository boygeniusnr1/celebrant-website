---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
// 1. REMOVE the /next import
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Professional celebrant services..." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="cursor-follower"></div>
    <slot />
  </body><script>
    // 3. ADD Vercel Analytics initialization here
    import { inject } from "@vercel/analytics";
    inject();

    // --- CURSOR FOLLOWER LOGIC ---
    const follower = document.querySelector(".cursor-follower") as HTMLElement;

    window.addEventListener("mousemove", (e) => {
      const x = e.clientX - 75;
      const y = e.clientY - 75;
      follower.style.transform = `translate3d(${x}px, ${y}px, 0)`;
    });

    const interactives = document.querySelectorAll("a, button, .gallery-item");
    interactives.forEach((el) => {
      el.addEventListener("mouseenter", () => {
        follower.style.transform += " scale(3)";
        follower.style.opacity = "0.3";
        follower.style.filter = "blur(140px)";
      });
      el.addEventListener("mouseleave", () => {
        follower.style.opacity = "0.5";
        follower.style.filter = "blur(120px)";
      });
    });

    document.addEventListener(
      "mouseleave",
      () => (follower.style.opacity = "0"),
    );
    document.addEventListener(
      "mouseenter",
      () => (follower.style.opacity = "0.5"),
    );
  </script>
</html>
