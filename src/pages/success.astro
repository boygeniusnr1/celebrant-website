---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Thank You | Paula Palmer">
  <section class="success-container">
    <div class="glass-card success-card">
      <div class="icon-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg
        >
      </div>
      <h1>Message Sent</h1>
      <p>
        Thank you for reaching out. I've received your details and look forward
        to helping you plan your special ceremony.
      </p>

      <div class="button-wrapper">
        <a href="/" class="home-btn magnetic">
          <span>Return Home</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"><path d="m15 18-6-6 6-6"></path></svg
          >
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .success-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    /* High-end Mesh Gradient Background */
    background-color: #ffffff;
    background-image:
      radial-gradient(at 0% 0%, rgba(255, 0, 136, 0.12) 0px, transparent 50%),
      radial-gradient(
        at 100% 100%,
        rgba(255, 0, 136, 0.08) 0px,
        transparent 50%
      ),
      radial-gradient(at 50% 50%, rgba(255, 0, 136, 0.05) 0px, transparent 100%);
  }

  .success-card {
    max-width: 500px;
    text-align: center;
    padding: 4rem 3rem;
    animation: slideUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .icon-circle {
    width: 80px;
    height: 80px;
    background: var(--primary-color);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    box-shadow: 0 10px 20px var(--glow-color);
  }

  h1 {
    color: var(--primary-color);
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  p {
    color: #666;
    margin-bottom: 2.5rem;
    font-size: 1.1rem;
  }

  /* --- Enhanced Button Styling --- */
  .home-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 1rem 2.5rem;
    background: rgba(255, 0, 136, 0.05);
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    text-decoration: none;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
  }

  .home-btn svg {
    transition: transform 0.3s ease;
  }

  .home-btn:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px var(--glow-color);
  }

  .home-btn:hover svg {
    transform: translateX(-5px);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
